<h2><b>{{viewTitle}}</b></h2>

<form action="/employee" method="post">

  <div class="form-row">
    <div class="form-group">
      <label>Name</label>
      <input type="hidden" name="_id" value="{{employee._id}}" />
      <input
        type="text"
        class="form-control"
        name="name"
        placeholder="first and last name"
        value="{{employee.name}}"
      />
      <div class="text-danger">
        {{employee.nameError}}
      </div>
    </div>

    <div class="form-group">
      <label>Email</label>
      <input
        type="text"
        class="form-control"
        name="email"
        placeholder="Email"
        value="{{employee.email}}"
      />
      <div class="text-danger">
        {{employee.emailError}}
      </div>
    </div>
  </div>
  <div class="form-row">

    <div class="form-group col-sm-6 col-md-6">
      <label>Mobil</label>
      <input
        type="text"
        class="form-control"
        name="phone"
        placeholder="phone"
        value="{{employee.phone}}"
      />
      <div class="text-danger">
        {{employee.mobileError}}
      </div>

    </div>

    <div class="form-group col-sm-6 col-md-6">
      <label>City</label>
      <input
        type="text"
        class="form-control"
        name="city"
        placeholder="City"
        value="{{employee.city}}"
      />

      <div class="text-danger">
        {{employee.cityError}}
      </div>
    </div>

  </div>

  <div class="form-group">
    <hr />
    <button type="submit" class="btn btn-primary">
      Validate
    </button>
    <hr />
    <a href="/employee/list">ALL EMPLOYEES</a>
  </div>

</form>